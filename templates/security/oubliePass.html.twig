{% extends 'base.html.twig' %}

{% block title %}Mot de passe oubli√©{% endblock %}

{% block body %}
<div class="container max-w-full mx-auto py-24 px-6">
    <div class="font-sans">
        <div class="max-w-sm mx-auto px-6">
            <div class="relative flex flex-wrap">
              <div class="w-full relative">
                <div class="mt-6">
                    {% for message in app.flashes('danger')%}
                        <h1 class="text-red-500 font-bold my-4 justify-items-center grid">{{message}}</h1>        
                    {% endfor %}
                    {% for message in app.flashes('message')%}
                        <h1 class="text-green-500 font-bold my-4 justify-items-center grid">{{message}}</h1>        
                    {% endfor %}
                    <h1 class="text-gray-600 font-bold my-4 justify-items-center grid">veuillez renseigner votre email</h1>
                    {{ form(emailform) }}
                </div>
              </div>
            </div>
        </div>
    </div>
</div>    
    
{% endblock %}
